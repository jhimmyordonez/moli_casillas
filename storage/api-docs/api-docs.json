        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Iniciar sesión con ID externo",
                "operationId": "a7997e7c1e3bfed64d4e56de82415931",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "usuario_auth_id",
                                    "tipo_documento",
                                    "numero_documento",
                                    "nombre_mostrar"
                                ],
                                "properties": {
                                    "usuario_auth_id": {
                                        "type": "string",
                                        "format": "uuid",
                                        "example": "11111111-1111-1111-1111-111111111111"
                                    },
                                    "tipo_documento": {
                                        "type": "string",
                                        "enum": [
                                            "DNI",
                                            "CE",
                                            "RUC"
                                        ],
                                        "example": "DNI"
                                    },
                                    "numero_documento": {
                                        "type": "string",
                                        "example": "12345678"
                                    },
                                    "nombre_mostrar": {
                                        "type": "string",
                                        "example": "Juan Pérez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "juan@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Inicio de sesión exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "properties": {
                                                "token": {
                                                    "type": "string",
                                                    "example": "1|AbCdEf..."
                                                },
                                                "tipo_token": {
                                                    "type": "string",
                                                    "example": "Bearer"
                                                },
                                                "cuenta": {
                                                    "$ref": "#/components/schemas/Casilla"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
